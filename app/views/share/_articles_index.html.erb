<% if @articles.empty? %>
<div class="container">
  <div class="row">
    <div class="col-sm-2 hidden-xs"></div>
    <div class="col-sm-8">
      <div class="alert alert-warning">記事がありません</div>
    </div>
    <div class="col-sm-2 hidden-xs"></div>
  </div>
</div>
<% else %>
<div id="articles">
	<div class="page">
		<%= render 'share/infinite_element' %>
	</div>	
</div>
<% end %>

<%= javascript_include_tag 'jquery.infinitescroll' %>
<script>
$("#articles .page").infinitescroll({
    loading: {
      img:     "http://www.mytreedb.com/uploads/mytreedb/loader/ajax_loader_blue_48.gif",
      msgText: "loading..."
    },
    navSelector: "nav.pagination",
    nextSelector: "nav.pagination a[rel=next]",
    itemSelector: "#articles div.articles"
});
</script>